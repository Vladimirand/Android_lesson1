<resources>
    <!--Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppThemeNew" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextStandardStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ButtonCityStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/translucent</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:buttonTint">@color/color_dark_slate_gray</item>
    </style>

    <!--Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                   </style>

</resources>
