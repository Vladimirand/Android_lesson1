<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppThemeNoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_gainsboro</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeSettings" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_gainsboro</item>
    </style>

    <style name="SettingsTheme2" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/color_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStandardStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ButtonCityStyleNight">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonCityStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@color/translucent</item>
    </style>

    <style name="CheckBoxNormalStyle">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">@color/color_dark_slate_gray</item>
    </style>

    <style name="BackgroundNight">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@color/color_cadet_blue</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ButtonBottomStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="LinearForecastStyle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearForecastDailyStyle">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
