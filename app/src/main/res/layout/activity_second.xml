<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.screens.SecondActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fon"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/infoFragment"
            android:name="com.nehvedovich.vladimir.pogoda.screens.screens.CityInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/catsWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cats"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/moreInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on_the_map"
            android:visibility="invisible"
            tools:visibility="visible" />

    </RelativeLayout>
</FrameLayout>
