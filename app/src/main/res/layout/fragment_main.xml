<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.screens.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/to_city_1"
                style="@style/ButtonCityStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_name_1" />

            <Button
                android:id="@+id/to_city_2"
                style="@style/ButtonCityStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_name_2" />


            <Button
                android:id="@+id/to_city_4"
                style="@style/ButtonCityStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_name_4" />

            <Button
                android:id="@+id/to_city_3"
                style="@style/ButtonCityStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/city_name_3" />


            <CheckBox
                android:id="@+id/checkBoxWind"
                style="@style/CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_indication" />

            <CheckBox
                android:id="@+id/checkBoxHumidity"
                style="@style/CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity_indication" />

            <CheckBox
                android:id="@+id/checkBoxPressure"
                style="@style/CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure_indication" />
        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>