<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.screens.SecondActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cityNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_name_1"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="icon"
                    android:textSize="@dimen/icon_font_size" />

                <TextView
                    android:id="@+id/textSunrise"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textSunset"
                    android:layout_alignStart="@+id/textSunset"
                    android:text="@string/sunrise" />

                <TextView
                    android:id="@+id/textSunset"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/weather_icon"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toEndOf="@+id/weather_icon"
                    android:text="@string/sunset" />

                <!--<ImageView-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="150dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:src="@drawable/sun_001_icon" />-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="@string/temperature"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/textFeelsLike"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/textTemperature"
                    android:text="@string/feels_like" />

                <TextView
                    android:id="@+id/textFeelsLikeT"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textFeelsLike"
                    android:layout_toRightOf="@+id/textFeelsLike"
                    android:text="@string/feel_like_temperature"
                    android:textSize="16dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/weather_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_conditions" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textWind"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/wind_speed" />

                <TextView
                    android:id="@+id/directionWind"
                    style="@style/TextStandardStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textWind"
                    android:text="@string/direction_wind" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textHumidity"
                style="@style/TextStandardStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity" />

            <TextView
                android:id="@+id/textPressure"
                style="@style/TextStandardStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:indeterminateTint="@color/color_gray"
                android:indeterminateTintMode="src_atop" />

        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>